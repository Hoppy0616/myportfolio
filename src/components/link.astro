---
interface Props {
	title: string;
	href: string;
}
const { href, title } = Astro.props;
---
<div class="link-card">
    <a href={href} class="">
        <h3>{title}</h3>
    </a>
</div>
<style>
    .link-card {
        border: 3px solid #25AFA7;
        color: #fff;
        padding: 32px 64px;
        border-radius: 8px;
    }
</style>